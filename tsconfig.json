{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",

        "outDir": "dist",
        "rootDir": "./src/",

        "strict": true,
        "sourceMap": false,

        "skipLibCheck": true,
        "importHelpers": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,

        "typeRoots": [
            "node_modules/@types",
        ],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}
